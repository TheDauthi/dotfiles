tmux_conf_copy_to_os_clipboard=true

##### pathpicker
bind-key                  C-f     run "< ~/.tmuxrc/functions sh -s _fpp #{pane_id}"

bind-key                  +       run '< ~/.tmuxrc/functions sh -s _maximize_pane "#{session_name}" #D'

# edit printscreen
bind-key -n C-F9  run '< ~/.tmuxrc/functions sh -s _edit_printscreen "#{session_name}"'
bind-key -n F9    run '< ~/.tmuxrc/functions sh -s _show_bindings "#{session_name}"'

bind-key    C-m   command-prompt -p "man: "  "split-window 'exec man %%'"